<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register">


    <TextView
        android:id="@+id/event_summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Event Details"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/txt_name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/event_summ"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/txt_Date"
        android:layout_toEndOf="@+id/txt_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:id="@+id/txt_Date"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/txt_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txt_Date"
        android:layout_alignStart="@+id/event_name"
        android:layout_toEndOf="@+id/txt_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:id="@+id/txt_Time"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/event_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txt_Time"
        android:layout_toEndOf="@+id/txt_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:id="@+id/txt_location"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignTop="@+id/event_location"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/event_summ"
        android:layout_below="@+id/event_time"
        android:layout_toEndOf="@+id/txt_location"/>

    <Button
        android:id="@+id/button_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:background="@color/bg_main"
        android:text="Previous"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/event_location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a picture"
        android:id="@+id/eventDriveButton"
        android:background="@color/bg_main"
        android:layout_alignTop="@+id/button_prev"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/eventMapButton"
        android:background="@color/bg_main"
        android:layout_alignTop="@+id/eventDriveButton"
        android:layout_toEndOf="@+id/eventDriveButton"
        android:layout_marginStart="32dp" />

</RelativeLayout>