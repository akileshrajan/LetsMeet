<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/bg_register"
    android:weightSum="1">

    <TextView
        android:id="@+id/meet_summ"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:text="Meeting Summary"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_weight="0.34" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:background="@color/bg_register"
        android:layout_weight="0.69">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/txt_name"
            android:layout_alignTop="@+id/meet_name"
            android:layout_alignStart="@+id/txt_date" />

        <TextView
            android:id="@+id/meet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_above="@+id/meet_date"
            android:layout_toEndOf="@+id/txt_timefrom"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/txt_date"
            android:layout_above="@+id/txt_timefrom"
            android:layout_alignStart="@+id/txt_timeto"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/meet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/txt_date"
            android:layout_alignStart="@+id/meet_name"
            android:layout_toEndOf="@+id/txt_timefrom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time From: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/txt_timefrom"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/txt_location" />

        <TextView
            android:id="@+id/time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/txt_timefrom"
            android:layout_toEndOf="@+id/txt_timefrom"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time To: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/txt_timeto"
            android:layout_alignBaseline="@+id/time_to"
            android:layout_alignBottom="@+id/time_to"
             />

        <TextView
            android:id="@+id/time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/time_from"
            android:layout_alignStart="@+id/time_from" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/txt_location"
            android:layout_above="@+id/txt_timeto"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp" />

        <TextView
            android:id="@+id/meet_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/txt_location"
            android:layout_alignStart="@+id/time_to" />




        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp">

    <Button
        android:id="@+id/button_prev_meet"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/buttonround"
        android:onClick="previous_click_Meet"
        android:text="Previous"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:text="Take a picture"
        android:id="@+id/driveButton"
        android:background="@drawable/buttonround"
        android:layout_alignTop="@+id/button_prev_meet"
        android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:text="Location"
            android:id="@+id/mapButton"
            android:background="@drawable/buttonround"
            android:layout_weight="0.34"
            android:layout_alignTop="@+id/driveButton"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>