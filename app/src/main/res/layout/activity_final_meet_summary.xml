<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register">

    <TextView
        android:id="@+id/meet_summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Meeting Summary"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/txt_name"
        android:layout_below="@+id/meet_summ"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/meet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_above="@+id/txt_date"
        android:layout_toEndOf="@+id/txt_timefrom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/txt_date"
        android:layout_below="@+id/txt_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/meet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txt_date"
        android:layout_alignStart="@+id/meet_name"
        android:layout_toEndOf="@+id/txt_timefrom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time From: "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/txt_timefrom"
        android:layout_below="@+id/meet_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txt_timefrom"
        android:layout_toEndOf="@+id/txt_timefrom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time To: "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/txt_timeto"
        android:layout_above="@+id/meet_location"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/time_from"
        android:layout_toEndOf="@+id/txt_timefrom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/txt_location"
        android:layout_alignTop="@+id/meet_location"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/meet_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/meet_summ"
        android:layout_below="@+id/time_to"
        android:layout_toEndOf="@+id/txt_timefrom" />


    <Button
        android:id="@+id/button_prev_meet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:background="@color/bg_main"
        android:onClick="previous_click_Meet"
        android:text="Previous"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txt_timeto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a picture"
        android:id="@+id/driveButton"
        android:background="@color/bg_main"
        android:layout_alignTop="@+id/button_prev_meet"
        android:layout_alignStart="@+id/meet_location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/mapButton"
        android:background="@color/bg_main"
        android:layout_alignTop="@+id/driveButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

</RelativeLayout>